<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:padding="@dimen/cardview_default_elevation"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#212121"
            >

            <TextView
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/aldrich"
                android:text="Name"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#ffff14"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuisines"
                android:textColor="#fff"
                android:id="@+id/textCuisines"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Timings"
                android:textColor="#fff"
                android:id="@+id/textTimings"/>

            <TextView
                android:id="@+id/textRatings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Ratings"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/No_Rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of People Voted"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textColor="#fff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="#fff"
                android:id="@+id/textPhoneNumbers"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>